{
  "manifest_version": 3,
  "name": "Steam Currency Converter",
  "version": "1.0",
  "description": "Конвертирует цены в Steam из одной валюты в другую /by toxi/",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://store.steampowered.com/*", "*://steamcommunity.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}